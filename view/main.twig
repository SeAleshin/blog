{% extends 'templates/layout.twig' %}

{% block body %}

    <h1 class="mt-3 mb-3">Последние статьи</h1>

    {% for article in articles.createdAt %}
        <div class="card mb-3 contain">
            <div class="card-header">
                <h5 class="card-title">{{ article.title }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ article.description }}</p>
                <p class="card-text"><small class="text-muted">Опубликовано {{ article.created_at }}</small></p>
                <a href="/article/{{ article.slug }}" class="btn btn-primary"> Посмотреть статью </a>
            </div>
        </div>
    {% endfor %}

    <h1 class="mt-3 mb-3">Последние измененные статьи</h1>

    {% for article in articles.updated_at %}
        <div class="card mb-3 contain">
            <div class="card-header">
                <h5 class="card-title">{{ article.title }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ article.description }}</p>
                <p class="card-text"><small class="text-muted">Изменено {{ article.updated_at }}</small></p>
                <a href="/article/{{ article.slug }}" class="btn btn-primary"> Посмотреть статью </a>
            </div>
        </div>
    {% endfor %}

{% endblock %}