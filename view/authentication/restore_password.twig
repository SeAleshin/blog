{% extends 'templates/layoutWithoutSidebar.twig' %}

{% block body %}
    <h1 class="mt-3 mb-3">Восстановление пароля</h1>

    <form action="/restore_password" method="POST">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Code</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="code">
        </div>
        <button type="submit" class="btn btn-primary" name="sendCode">Изменить пароль</button>
    </form>
{% endblock %}