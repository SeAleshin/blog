{% extends 'templates/layoutWithoutSidebar.twig' %}

{% block body %}

    {% if alert is not empty %}
        {{ alert }}
    {% endif %}

    <h1 class="mt-3 mb-3">Новый пароль</h1>

    <form action="/restore_password" method="POST">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Новый пароль</label>
            <input type="password" class="form-control" id="exampleFormControlInput1" name="password">
        </div>
        <button type="submit" class="btn btn-primary" name="changePassword">Изменить пароль</button>
    </form>

{% endblock %}