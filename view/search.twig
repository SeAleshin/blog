{% extends 'templates/layout.twig' %}

{% block body %}
    <h1 class="mt-3 mb-3">Найденые статьи</h1>

    {% for article in articles %}
        <div class="card mb-3 contain">
            <div class="card-header">
                <h5 class="card-title">{{ article.title }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{ article.description }}</p>
                <p class="card-text">
                    <small class="text-muted">Опубликовано {{ article.created_at }}.</small>
                    {% if article.created_at != article.updated_at %}
                        <small class="text-muted">Последнее изменение {{ article.updated_at }}</small>
                    {% endif %}
                </p>
                <a href="/article/{{ article.slug }}" class="btn btn-primary"> Посмотреть статью </a>
            </div>
        </div>
    {% endfor %}
{% endblock %}